<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        TextInput:
            id: calc_input
            text: "0"
            halign: "right"
            font_size: 65
            size_hint: (1, .15)

        GridLayout:
            cols: 4
            rows: 5

            # Row
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "%"
            
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "<<"
                on_press: root.remove()

            Button:
                id: clear
                size_hint: (.2, .2)
                font_size: 32
                text: "C"
                on_press: root.clear()

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "/"
                on_press: root.divide()
            
            # Row
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "7"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.press_button(7)
            
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "8"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.press_button(8)
            
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "9"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.press_button(9)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "x"
                on_press: root.multiply()
            
            # Row
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "4"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.press_button(4)
            
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "5"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.press_button(5)
            
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "6"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.press_button(6)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "-"
                on_press: root.sub()
            
            # Row
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "1"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.press_button(1)
            
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "2"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.press_button(2)
            
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "3"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.press_button(3)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "+"
                on_press: root.add()
            
            # Row
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "+/-"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.plus_minus()
            
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "0"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.press_button(0)
            
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "."
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.dot()

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "="
                on_press: root.equal()
