<SecondWindowLayout>:

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            text: "Second Screen"
            font_size: 30
            color: (0, 0,0,1)

        TextInput:
            id: textt
            text: ""
            halign: "center"
            font_size: 30

        Button:
            text: "Switch to First Page"
            font_size: 30
            on_release: 
                app.root.current = "first"
                root.manager.transition.direction = 'right'